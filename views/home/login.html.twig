{% include '../includes/header.html.twig' %}

<header>
    <div class='logo'>
        <img src="/images/logo/logo-horizontal.png" class='navigate' data-url='/'/>
    </div>
    <div class='input'>
        <input class='gray navigate' data-url='/user/login' type='submit' value='Se connecter'/>
        <input class='blue navigate' data-url='/' type='submit' value='Retour'/>
    </div>
</header>

<div class='loginContent'>
    <div class='msgInfo'>&nbsp;</div>

    <h1>Connexion</h1>

    <div id='divFormLogin'>
        <label for='pseudo'>Pseudo <span>(ou email)</span></label>
        <input type='text' name='pseudo' required placeholder='ex : pdurand' minlength='4'/>

        <label for='pwd'>Mot de passe</label>
        <input type='password' name='pwd' required placeholder='ex : *****' minlength='5'/>

        <input type='submit' value="Connexion" class='green'/>
    </div>

    <div class='existAcount'>
        <span>Pas de compte ? </span>
        <span class='link navigate' data-url='/user/signup'>Inscrivez-vous</span>
    </div>
    <div class='forgotPwd'>
        <span>Mot de passe oublié ? </span>
        <span class='link navigate' data-url='/user/signup'>Réinitialisez</span>
    </div>
</div>


