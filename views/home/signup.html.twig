{% include '../includes/header.html.twig' %}

    <header>
        <div class='logo navigate' data-url='/'>
            <img src="/images/logo/logo-horizontal.png"/>
        </div>
    </header>

    <div class='signupcontent'>
        <h1>Inscription</h1>

        <div class='divForm'>
            <label for='pseudo'>Pseudo</label>
            <input type='text' name='pseudo' required placeholder='ex : gpequery'/>

            <label for='email'>E-mail</label>
            <input type='email' name='email' required placeholder='ex : mon-mail@mail.fr'/>

            <label for='pwd'>Mot de passe</label>
            <input type='password' name='pwd' required placeholder='ex : *****' minlength='5'/>

            <input type='submit' value="M'inscrire" class='green' />
        </div>

        <div class='existAcount'>
            <span>Vous avez déjà un compte ? </span>
            <span class='link navigate' data-url='/user/login'>Connectez-vous</span>
        </div>
    </div>


